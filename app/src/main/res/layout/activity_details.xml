<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:id="@+id/detais_image_view"
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:padding="3dp"
        android:src="@mipmap/ic_launcher" />
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_weight="0.88">

        <TextView
            android:id="@+id/detais_name_view"
            android:layout_width="385dp"
            android:layout_height="43dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:text="name asdjahksjdahksjdhkasd"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/details_last_view"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:text="RS 100"
                android:textStyle="bold"
                android:textColor="@color/colorTexts"/>
            <TextView
                android:id="@+id/details_price_view"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:text="por 500 "
                android:textColor="@color/colorTexts"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/details_desc_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:text="@string/lblDetailsDesc"
            android:textColor="@color/colorTexts"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/details_desc_view"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="3.18"
            android:textColor="@color/colorTexts"
            android:textStyle="bold" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/details_link_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:srcCompat="@android:drawable/ic_menu_info_details"
        android:background="@drawable/selector"/>

</LinearLayout>
